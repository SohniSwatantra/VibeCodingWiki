---
import AppLayout from '../layouts/AppLayout.astro';
import { SponsorsList } from '../components/app/SponsorsList.tsx';
---

<AppLayout
  title="Sponsors"
  description="Support VibeCodingWiki and join our community of sponsors"
>
  <script is:inline src="https://app.rapidforms.co/embed/index.js"></script>
  <div class="mx-auto max-w-5xl space-y-8">
    <!-- Sponsors List -->
    <section class="rounded border border-[#a2a9b1] bg-white p-6 shadow-sm">
      <h2 class="mb-4 text-2xl font-semibold text-[#202122]">Our Sponsors</h2>
      <p class="mb-6 text-sm text-[#54595d]">
        Thank you to our amazing sponsors who support VibeCodingWiki! Your contributions help us maintain and grow this community resource.
      </p>

      <SponsorsList client:load />
    </section>

    <!-- Become a Sponsor -->
    <section class="rounded border border-[#a2a9b1] bg-white p-6 shadow-sm">
      <h2 class="mb-4 text-2xl font-semibold text-[#202122]">Become a Sponsor</h2>
      <p class="mb-6 text-sm text-[#54595d]">
        Support VibeCodingWiki and help us continue to provide valuable resources to the VibeCoding community. As a sponsor, you'll be featured on this page with a thank you note.
      </p>

      <!-- RapidForms Sponsor Form -->
      <div id="sponsor-form" class="rounded border border-[#c8ccd1] bg-[#f8f9fa] p-6">
        <p class="mb-4 text-sm text-[#202122]">
          Ready to sponsor? Fill out the form below:
        </p>

        <iframe
          loading="lazy"
          id="rapidforms-iframe"
          src="https://app.rapidforms.co/embed/8b1336?theme=dark"
          width="100%"
          height="589.984375px"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          class="rounded"
        ></iframe>
      </div>
    </section>
  </div>
</AppLayout>
