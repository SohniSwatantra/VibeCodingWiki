---
import AppLayout from '../../layouts/AppLayout.astro';
import { NewPageProposalForm } from '../../components/wiki/NewPageProposalForm.tsx';
---

<AppLayout title="Propose a new Vibecodingwiki page" description="Suggest new topics, share outlines, and help grow the community knowledge base.">
  <section class="rounded border border-[#a2a9b1] bg-[#f8f9fa] p-5 shadow-sm">
    <h1 class="text-[1.75rem] font-normal text-[#202122]">Help expand the encyclopedia</h1>
    <p class="mt-2 text-sm text-[#54595d]">
      VibeCoding thrives on shared stories, tools, and rituals. Use this form to pitch new pages. Moderators will review proposals,
      provide feedback, and guide you through the publishing workflow.
    </p>
  </section>

  <NewPageProposalForm client:load />
</AppLayout>

