---
import AppLayout from '../layouts/AppLayout.astro';
import { fetchDirectory, getConvexUserByWorkOSId } from '../lib/wiki/convexHelpers';
import { runConvexQuery } from '../lib/convex.server';
import { filterAdminSummary } from '../lib/utils/filterAdminSummary';

// Check if user is super admin
let isSuperAdmin = false;
if (Astro.locals.user) {
  const convexUser = await getConvexUserByWorkOSId(Astro.locals.user.id);
  if (convexUser) {
    const userRoles = await runConvexQuery<any[]>('roles:getUserRoles', { userId: convexUser._id });
    const roleNames = userRoles?.map((r: any) => r.role) ?? [];
    isSuperAdmin = roleNames.includes('super_admin');
  }
}

const structuredSections = [
  {
    title: 'Timeline',
    description: 'Chronicles how "vibe coding" spread from Karpathy\'s February 2025 X post through media coverage, Y Combinator adoption metrics, and subsequent scrutiny from critics warning of technical debt.',
    href: '/wiki/timeline-of-vibecoding',
  },
  {
    title: 'Tools',
    description: 'AI coding platforms (Lovable, Bolt, Cursor, Replit), debugging aids (CodeRabbit, VibeCodeFixers), and educational resources that support conversational AI-assisted development workflows.',
    href: '/wiki/vibecoding-tools',
  },
  {
    title: 'Companies',
    description: 'Platform leaders (Lovable unicorn at $1.8B, Bolt with largest hackathon), AI-first IDEs (Replit Agents, Cursor with $2.3B funding), and infrastructure providers (Vercel v0, Netlify, CodeRabbit, Supabase, Clerk).',
    href: '/wiki/vibecoding-companies',
  },
  {
    title: 'Hackathons',
    description: 'Major competitions including Bolt\'s World\'s Largest Hackathon ($1M prize, 100K participants), TanStack Start Hackathon ($640K prizes where VibeCodingWiki was created), and the 80% AI code rule game jams.',
    href: '/wiki/vibecoding-hackathons',
  },
  {
    title: 'Tutorials',
    description: 'Getting started with Google Cloud guides and YouTube challenges, mastering prompting patterns and cheat sheets, learning platform-specific tools (Replit AI, Lovable Academy, Bolt), and advanced security training from Kaspersky/IBM.',
    href: '/wiki/vibecoding-tutorials',
  },
  {
    title: 'Best practices',
    description: 'Security hygiene (never expose API keys, use Clerk/Better Auth, validate inputs), spec-driven development with GitHub Spec Kit, test-driven development with CI, and clear incremental prompting with human oversight.',
    href: '/wiki/vibecoding-best-practices',
  },
];

const { articles: featuredCollection } = await fetchDirectory({ limit: 3 });
const featuredArticles = featuredCollection.slice(0, 3);
---

<AppLayout
  title="VibeCoding Wiki"
  description="The encyclopedia for Vibe Coders. Capture community knowledge with familiar wiki workflows and a modern tooling stack."
>
  <!-- Introductory portal similar to the MediaWiki main page layout -->
  <section class="grid gap-4 md:grid-cols-[2fr_1fr]">
    <article class="rounded border border-[#a2a9b1] bg-[#f8f9fa] p-5 shadow-sm">
      <h2 class="mb-3 text-2xl font-normal text-[#202122]">Welcome to Vibecodingwiki</h2>
      <div class="space-y-3 text-sm leading-relaxed text-[#202122]">
        <p>
          VibeCodingwiki is the home of the VibeCoding ecosystem — a shared space for mapping the tools, workflows, culture, and ideas emerging around AI-assisted software creation. It brings together everything related to VibeCoding in one place: from foundational concepts and terminology to rapidly evolving platforms, best practices, and case studies.
        </p>
        <p>
          The wiki serves as a neutral reference point for anyone working across AI-native development environments such as Cursor, Replit, Bolt, v0, GitHub Copilot, Claude Code, and the growing landscape of agentic tooling. Instead of teaching a single method, it documents how people build with conversational coding, rapid prototyping, iterative feedback loops, and model-driven development.
        </p>
        <p>
          VibeCodingwiki exists to track a fast-moving field — capturing experiments, production lessons, cultural shifts, and the emerging norms of building software through dialogue rather than manual implementation. Whether you're exploring, researching, or shipping with AI-first workflows, this is the place where the movement is recorded, discussed, and continuously refined.
        </p>
      </div>
    </article>

    <aside class="flex flex-col gap-3 rounded border border-[#a2a9b1] bg-white p-4 shadow-sm">
      <h3 class="text-lg font-semibold text-[#202122]">Quick links</h3>
      <ul class="space-y-2 text-sm text-[#202122]">
        <li><a href="/recent" class="text-[#0645ad] hover:text-[#0b0080]">Recent changes</a></li>
        <li><a href="/coming-soon" class="text-[#0645ad] hover:text-[#0b0080]">Policies &amp; guidelines</a></li>
        <li><a href="/wiki/new" class="text-[#0645ad] hover:text-[#0b0080]">Propose a new page</a></li>
        <li><a href="/roadmap" class="text-[#0645ad] hover:text-[#0b0080]">Roadmap</a></li>
      </ul>
      <div class="mt-2 rounded border border-[#c8ccd1] bg-[#f8f9fa] p-3 text-xs text-[#54595d]">
        <p class="font-semibold text-[#202122]">Did you know?</p>
        <p>
          Vibecodingwiki is originally created as part of Tanstack Start Hackathon. It's a vibecoding community led project where anyone can suggest edits and be moderator. Built with & uses Tanstack, Astro, Convex, Firecrawl, Netlify, Cloudflare, Coderabbit, Autumn and Sentry.
        </p>
      </div>
    </aside>
  </section>

  <section class="mt-6 grid gap-4 md:grid-cols-3">
    {structuredSections.map((section) => (
      <article class="rounded border border-[#c8ccd1] bg-[#f8f9fa] p-4 shadow-sm">
        <h4 class="text-base font-semibold text-[#202122]">
          <a href={section.href}>{section.title}</a>
        </h4>
        <p class="mt-2 text-sm text-[#54595d]">{section.description}</p>
      </article>
    ))}
  </section>

  <section class="mt-6 rounded border border-[#a2a9b1] bg-white p-5 shadow-sm">
    <h3 class="mb-3 text-lg font-semibold text-[#202122]">Featured articles</h3>
    <div class="grid gap-4 md:grid-cols-3">
      {featuredArticles.map((article) => {
        const filteredSummary = filterAdminSummary(article.summary, isSuperAdmin);
        return (
          <article class="rounded border border-[#c8ccd1] bg-[#f8f9fa] p-4 shadow-sm">
            <h4 class="text-base font-semibold text-[#202122]">
              <a href={`/wiki/${article.slug}`}>{article.title}</a>
            </h4>
            {filteredSummary && <p class="mt-2 text-sm text-[#54595d]">{filteredSummary}</p>}
            <p class="mt-3 text-xs text-[#72777d]">
              Categories: {article.categories.join(', ')}
            </p>
          </article>
        );
      })}
    </div>
  </section>
</AppLayout>
