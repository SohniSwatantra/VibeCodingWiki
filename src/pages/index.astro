---
import AppLayout from '../layouts/AppLayout.astro';
import { fetchDirectory } from '../lib/wiki/convexHelpers';

const structuredSections = [
  {
    title: 'Timeline',
    description: 'Chronological view of VibeCoding milestones, events, and releases.',
    href: '/wiki/timeline-of-vibecoding',
  },
  {
    title: 'Tools',
    description: 'GlowStack starters, audio-reactive utilities, and collaboration software.',
    href: '/wiki/vibecoding-tools',
  },
  {
    title: 'Companies',
    description: 'Studios, startups, and enterprises building with VibeCoding principles.',
    href: '/wiki/vibecoding-companies',
  },
  {
    title: 'Hackathons',
    description: 'Signature hack events, rituals, and award categories.',
    href: '/wiki/vibecoding-hackathons',
  },
  {
    title: 'Tutorials',
    description: 'Guides covering vibe-aligned design and developer workflows.',
    href: '/wiki/vibecoding-tutorials',
  },
  {
    title: 'Best practices',
    description: 'Guidelines for emotional safety, sustainability, and architecture.',
    href: '/wiki/vibecoding-best-practices',
  },
];

const { articles: featuredCollection } = await fetchDirectory({ limit: 3 });
const featuredArticles = featuredCollection.slice(0, 3);
---

<AppLayout
  title="VibeCoding Wiki"
  description="The encyclopedia for Vibe Coders. Capture community knowledge with familiar wiki workflows and a modern tooling stack."
>
  <!-- Introductory portal similar to the MediaWiki main page layout -->
  <section class="grid gap-4 md:grid-cols-[2fr_1fr]">
    <article class="rounded border border-[#a2a9b1] bg-[#f8f9fa] p-5 shadow-sm">
      <h2 class="mb-2 text-2xl font-normal text-[#202122]">Welcome to Vibecodingwiki</h2>
      <p class="mb-3 text-sm text-[#202122]">
        Vibecodingwiki is a collaborative encyclopedia for builders exploring the art of vibe-based coding. Every article is written, curated,
        and improved by the community. We preserve the familiar MediaWiki structure—namespaces, talk pages, revision history—while layering
        in a modern TypeScript toolchain.
      </p>
      <ul class="list-disc space-y-2 pl-5 text-sm text-[#202122]">
        <li>Document flows, snippets, and cultural lore for Vibe Coders worldwide.</li>
        <li>Prototype UI in Bolt.new, then sync edits into this Astro front-end.</li>
        <li>Back everything with Convex data functions and TanStack-powered interactivity.</li>
      </ul>
      <div class="mt-4 flex flex-wrap gap-3 text-sm">
        <a class="rounded border border-[#a2a9b1] bg-white px-3 py-1.5 font-semibold text-[#0645ad] hover:bg-[#f6f6f6]" href="/app">
          Visit the wiki app
        </a>
        <a class="rounded border border-[#a2a9b1] bg-white px-3 py-1.5 text-[#202122] hover:bg-[#f6f6f6]" href="/docs/architecture">
          Read the architecture guide
        </a>
      </div>
    </article>

    <aside class="flex flex-col gap-3 rounded border border-[#a2a9b1] bg-white p-4 shadow-sm">
      <h3 class="text-lg font-semibold text-[#202122]">Quick links</h3>
      <ul class="space-y-2 text-sm text-[#202122]">
        <li><a href="/recent">Recent changes</a></li>
        <li><a href="/community">Community portal</a></li>
        <li><a href="/policies">Policies &amp; guidelines</a></li>
        <li><a href="/help">Help desk</a></li>
        <li><a href="/wiki/new">Propose a new page</a></li>
        <li><a href="/roadmap">Roadmap wiki project</a></li>
      </ul>
      <div class="mt-2 rounded border border-[#c8ccd1] bg-[#f8f9fa] p-3 text-xs text-[#54595d]">
        <p class="font-semibold text-[#202122]">Did you know?</p>
        <p>
          Vibecodingwiki content is stored in Convex, which keeps revisions and discussions in sync with your front-end islands.
          Anyone with a contributor account can suggest edits, and moderators steward the shared knowledge base.
        </p>
      </div>
    </aside>
  </section>

  <section class="mt-6 grid gap-4 md:grid-cols-3">
    {structuredSections.map((section) => (
      <article class="rounded border border-[#c8ccd1] bg-[#f8f9fa] p-4 shadow-sm">
        <h4 class="text-base font-semibold text-[#202122]">
          <a href={section.href}>{section.title}</a>
        </h4>
        <p class="mt-2 text-sm text-[#54595d]">{section.description}</p>
      </article>
    ))}
  </section>

  <section class="mt-6 rounded border border-[#a2a9b1] bg-white p-5 shadow-sm">
    <h3 class="mb-3 text-lg font-semibold text-[#202122]">Featured articles</h3>
    <div class="grid gap-4 md:grid-cols-3">
      {featuredArticles.map((article) => (
        <article class="rounded border border-[#c8ccd1] bg-[#f8f9fa] p-4 shadow-sm">
          <h4 class="text-base font-semibold text-[#202122]">
            <a href={`/wiki/${article.slug}`}>{article.title}</a>
          </h4>
          <p class="mt-2 text-sm text-[#54595d]">{article.summary}</p>
          <p class="mt-3 text-xs text-[#72777d]">
            Categories: {article.categories.join(', ')}
          </p>
        </article>
      ))}
    </div>
  </section>
</AppLayout>
