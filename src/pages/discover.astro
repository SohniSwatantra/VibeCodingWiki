---
import AppLayout from '../layouts/AppLayout.astro';
import { KnowledgeSearch } from '../components/wiki/KnowledgeSearch.tsx';
---

<AppLayout title="Discover VibeCoding knowledge" description="Search, filter, and surface the articles that matter to your project.">
  <section class="rounded border border-[#a2a9b1] bg-white p-5 shadow-sm">
    <h1 class="text-[1.75rem] font-normal text-[#202122]">Discover</h1>
    <p class="mt-2 text-sm text-[#54595d]">
      Filter by category, tags, or popularity to find relevant pages for your next vibe session. Popularity scores combine reputation
      reactions, page views, and recent talk page endorsements.
    </p>
  </section>

  <KnowledgeSearch client:load />
</AppLayout>
