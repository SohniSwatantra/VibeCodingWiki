---
export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import { MarkdownEditor } from '../components/MarkdownEditor.tsx';
import { readDocument } from '../lib/files';

const content = await readDocument('plan');
---

<BaseLayout title="Implementation Plan" description="Maintain the execution plan for VibeCodingWiki.">
  <MarkdownEditor client:load initialContent={content} endpoint="/api/plan" documentName="Implementation Plan" />
</BaseLayout>

